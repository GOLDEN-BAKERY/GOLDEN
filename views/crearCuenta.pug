doctype html
html(lang="es")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Crear Cuenta - Golden Bakery Shop
    link(href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet")
    link(href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700&display=swap" rel="stylesheet")
    link(rel="stylesheet" href="styles.css")

  body(class="bg-black flex  text-dark-gold items-center justify-center h-screen")
    .bg-black.p-8.rounded.shadow-md.w-full.max-w-lg.border-4.border-dark-gold
      .bg-black.p-8.rounded.shadow-md.w-full.max-w-lg.mt-14
        h2.text-4xl.font-bold.mb-4.text-center.font-playfair.text-dark-gold Crear Cuenta
      form(action="/login" method="POST")
        .mb-2.pt-4
          label(for="name" class="block text-lg font-semibold mb-2 font-playfair") Nombre Completo
          input(type="text" id="name" name="name" required class="border-4 border-dark-gold  px-4 py-2 w-full rounded")
        .mb-2.pt-2
          label(for="email" class="block text-lg font-semibold mb-2 font-playfair") Correo Electrónico
          input(type="email" id="email" name="email" required class="border-4 border-dark-gold  px-4 py-2 w-full rounded")
        .mb-2.pt-2
          label(for="phone" class="block text-lg font-semibold mb-2 font-playfair") Número de Teléfono
          input(type="tel" id="phone" name="phone" required class="border-4 border-dark-gold px-4 py-2 w-full rounded")
        .mb-4.pt-2
          label(for="password" class="block text-lg font-semibold mb-2 font-playfair") Contraseña
          input(type="password" id="password" name="password" required class="border-4 border-dark-gold px-4 py-2 w-full rounded")
        .flex.items-center.justify-between
          button(type="submit" class="rounded-md bg-yellow-400 px-3.5 py-2.5 text-sm font-semibold text-black shadow-sm hover:bg-yellow-500") Registrarse

      .mt-10.flex.items-center.justify-center.gap-x-6
        a(href="/" class="rounded-md bg-yellow-400 px-3.5 py-2.5 text-sm font-semibold text-black shadow-sm hover:bg-yellow-500") Pagina Principal

      div(class="container mx-auto px-4 sm:px-6 lg:px-8")
          img(src="GOLDEN_logo.jpg" alt="Logo de Golden Bakery Shop" class="h-122 w-auto")
